@model PPSPS.Models.PPSPSSubject

@{
    ViewData["Title"] = "Odstranit předmět";
}

<h1>Odstranit předmět</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h4>Opravdu si přejete odstranit předmět @Html.DisplayFor(model => model.SubjectName)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="SubjectName" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="SubjectAbbreviation" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectAbbreviation)
        </dd>
    </dl>
    <hr/>

    <form asp-action="SubjectDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Odstranit" class="btn btn-danger" /> |
        <a asp-action="SubjectsOverview">Zpět na přehled</a>
    </form>
</div>