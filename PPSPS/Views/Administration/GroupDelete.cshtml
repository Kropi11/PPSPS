@model PPSPS.Models.PPSPSGroup

@{
    ViewData["Title"] = "Odstranit skupinu";
}

<h1>Odstranit skupinu</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h4>Opravdu si přejete odstranit skupinu @Html.DisplayFor(model => model.GroupName)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="GroupName" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupName)
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="GroupAbbreviation" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupAbbreviation)
        </dd>
    </dl>
    <hr/>

    <form asp-action="GroupDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Odstranit" class="btn btn-danger" /> |
        <a asp-action="GroupsOverview">Zpět na přehled</a>
    </form>
</div>