@model PPSPS.Areas.Identity.Data.PPSPSUser

@{
    ViewData["Title"] = "Odstranit uživatele";
}

<h1>Odstranit uživatele</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h4>Opravdu si přejete odstranit uživatele @Html.DisplayFor(model => model.LastName) @Html.DisplayFor(model => model.FirstName)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Křestní jméno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Příjmení
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="UserDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Odstranit" class="btn btn-danger" /> |
        <a asp-action="UsersOverview">Zpět na přehled</a>
    </form>
</div>