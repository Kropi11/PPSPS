@model PPSPS.Models.PPSPSTask

@{
    ViewData["Title"] = "Detail zadání";
}

<h1>Detail práce</h1>

<div>
    <h4>@Html.DisplayFor(model => model.TaskName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="TaskName" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ClassId" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassId) (@Html.DisplayFor(model => model.YearsOfStudies.Years))
        </dd>
        @if (Model.GroupId != "all")
        {
            <dt class="col-sm-2">
                <label asp-for="GroupId" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Group.GroupName)
            </dd>
        }
         <dt class="col-sm-2">
            <label asp-for="SubjectId" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.SubjectName) (@Html.DisplayFor(model => model.Subject.SubjectAbbreviation))
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TeacherId" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.LastName) @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
        <dt class="col-sm-2">
            Termín
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateEntered) - @Html.DisplayFor(model => model.DateDeadline)
        </dd>
    </dl>
    <hr />

</div>
<div>
    <a href="#" onclick="location.href = '@Url.Action("AssignmentsOverview", "Administration",new {id = Model.Id})'">Seznam studentů s touto prací</a><br/>
    <a asp-action="TasksOverview">Zpět na přehled</a>
</div>