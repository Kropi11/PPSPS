@model PPSPS.Models.PPSPSClass

@{
    ViewData["Title"] = "Detail třídy";
}

<h1>Detail třídy</h1>

<div>
    <h4>@Html.DisplayFor(model => model.ClassName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="ClassName" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="YearOfEntry" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfEntry)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ClassTeacherId" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassTeacher.LastName) @Html.DisplayFor(model => model.ClassTeacher.FirstName) (@Html.DisplayFor(model => model.ClassTeacher.Email))
        </dd>
    </dl>
    <dl>
        <hr />
        <dt class="col-sm-2">
            Žáci
        </dt>
            <div class="row d-flex justify-content-center">
        <dd class="col-sm-10">
                <table id="UsersOverview" class="table table-sm table-hover">
                    <thead class="thead">
                    <tr>
                        <th scope="col">Příjmení</th>
                        <th scope="col">Jméno</th>
                        <th scope="col">E-mail</th>
                        <th colspan="2" scope="col"/>
                    </tr>
                    </thead>
                    <tbody id="Table">
                    @foreach (var item in Model.User.Id)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => item.User.LastName)</td>
                            <td>@Html.DisplayFor(item => item.User.FirstName)</td>
                            <td>@Html.DisplayFor(item => item.User.Email)</td>
                            <td class="textCenter" onclick="location.href = '@Url.Action("UserOverview", "Teacher", new {id = Model.User.Id})'">
                                <i class="bi bi-file-earmark-person" style="color: #1c7430"></i>
                            </td>
                            <td class="textCenter" onclick="location.href = '@Url.Action("UserEdit", "Teacher", new {id = Model.User.Id})'">
                                <i class="bi bi-pencil-square" style="color: #0056b3"></i>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
        </dd>
            </div>
    </dl>
    <hr />

</div>
<div>
    <a asp-action="ClassesOverview">Zpět na přehled</a>
</div>