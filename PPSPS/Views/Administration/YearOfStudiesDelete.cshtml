@model PPSPS.Models.PPSPSYearsOfStudies

@{
    ViewData["Title"] = "Odstranit ročník";
}

<h1>Odstranit ročník</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h4>Opravdu si přejete odstranit ročník @Html.DisplayFor(model => model.Years)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Years" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Years)
        </dd>
    </dl>
    <hr/>

    <form asp-action="YearOfStudiesDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Odstranit" class="btn btn-danger" /> |
        <a asp-action="YearsOfStudiesOverview">Zpět na přehled</a>
    </form>
</div>