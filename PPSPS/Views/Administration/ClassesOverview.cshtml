@model IEnumerable<PPSPS.Models.PPSPSClass>

@{
    ViewData["Title"] = "Přehled uživatelů";
}

    <!-- Obsah stránky -->
<div class="container">
    <div class="row">
        <div class="col-sm-10 offset-sm-1 text-center">
            <form class="form-inline justify-content-center">
                <div class="form-group">
                    <input class="form-control" id="tableSearch" type="text" placeholder="Hledat ... ">
                </div>
            </form>
           </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <br/>
                <table id="ClassesOverview" class="table table-hover table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Název třídy</th>
                        <th scope="col">Rok nástupu</th>
                        <th scope="col">Třídní učitel</th>
                        <th colspan="3" scope="col"><button type="submit" class="btn btn-primary" onclick="location.href = '@(Url.Action("ClassCreate", "Administration"))'">Přidat třídu</button></th>
                    </tr>
                    </thead>
                    <tbody id="Table">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                            <td>@Html.DisplayFor(modelItem => item.YearOfEntry)</td>
                            <td>@Html.DisplayFor(modelItem => item.ClassTeacher.LastName) @Html.DisplayFor(modelItem => item.ClassTeacher.FirstName)</td>
                            <td class="textCenter" onclick="location.href = '@(Url.Action("ClassOverview", "Administration",new {id = item.Id}))'">
                                <i class="bi bi-file-earmark-person" style="color: #1c7430"></i>
                            </td>
                            <td class="textCenter" onclick="location.href = '@Url.Action("ClassEdit", "Administration",new {id = item.Id})'">
                                <i class="bi bi-pencil-square" style="color: #0056b3"></i>
                            </td>
                            <td class="textCenter" onclick="location.href = '@Url.Action("ClassDelete", "Administration",new {id = item.Id})'">
                                <i class="bi bi-trash" style="color: #b21f2d"></i>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>