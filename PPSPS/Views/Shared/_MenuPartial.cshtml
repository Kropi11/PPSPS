@using Microsoft.AspNetCore.Identity
@using PPSPS.Areas.Identity.Data

@inject SignInManager<PPSPSUser> SignInManager
@inject UserManager<PPSPSUser> UserManager

@if (SignInManager.IsSignedIn(User)){
    <div id="wrapper">
        <nav class="navbar navbar-inverse fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <div class="sidebar-header">
                    <div class="sidebar-brand">
                        <img src="https://www.sps-pi.cz/upload/sablona/logo2.png" alt="SPŠ a VOŠ Písek" width="auto" height="95%">
                    </div>
                </div>
                @if (User.Identity.IsAuthenticated){
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Domovská stránka</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="UserOverview">Můj profil</a></li>
                }
                @if (User.IsInRole("Student")){
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Něco</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Něco</a></li>
                }
                @if (User.IsInRole("Teacher")){
                    <li><a asp-area="" asp-controller="Teacher" asp-action="CreateTask">Vytvořit zadání</a></li>
                }
                @if (User.IsInRole("Administrator")){
                    <li><a asp-area="" asp-controller="Administration" asp-action="UsersOverview">Přehled uživatelů</a></li>
                    <li><a asp-area="" asp-controller="Administration" asp-action="TasksOverview">Přehled prací</a></li>
                    <li><a asp-area="" asp-controller="Administration" asp-action="ClassesOverview">Přehled tříd</a></li>
                }
            </ul>
        </nav>

        <div id="page-content-wrapper">
            <button type="button" class="hamburger animated fadeInLeft is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
        </div>
    </div>
}