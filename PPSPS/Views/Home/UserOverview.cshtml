@model PPSPS.Areas.Identity.Data.PPSPSUser

@{
    ViewData["Title"] = "Můj profil";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Křestní jméno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Příjmení
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        @if (!User.IsInRole("Administrator") || true)

        {
            <dt class="col-sm-2">
                Třída
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Class.ClassName)
            </dd>
        }
    </dl>
    <hr />
</div>
