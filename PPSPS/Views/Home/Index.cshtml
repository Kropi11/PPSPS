@using System;
@using System.Linq;

@{
    ViewData["Title"] = "Domovská stránka";
    List<string> NameOfWork = new List<string>() {"Návrh KLO", "Návrh SLO", "Tvorba výkresové dokumentace pro program Heidenhain"};
    List<string> Deadline = new List<string>() {"1. 12. 2020", "16. 12. 2020", "18. 12. 2020"};
    List<string> Subject = new List<string>() {"HW", "HW", "PRAI"};
    List<int> Score = new List<int>() {2, 1, 3};
    List<bool> Complete = new List<bool>() {true, true, false};
}

<!-- Obsah stránky -->
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title" onclick="location.href = '@(Url.Action("", "Home"))'"><span role="button" tabindex="0">Moje práce</span></h5>
          <p class="card-text">
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <br/>
                <table class="table table-hover">
                  <thead class="thead-dark">
                  <tr>
                    <th scope="col">Jméno práce</th>
                    <th scope="col" class="textCenter">Předmět</th>
                    <th scope="col" class="textCenter">Datum odevzdání</th>
                    <th scope="col" class="textCenter">
                      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-card-checklist" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                        <path fill-rule="evenodd" d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
                      </svg>
                    </th>
                  </tr>
                  </thead>
                  <tbody>
                  @{
                    for (int i = 0; i < NameOfWork.Count; i++)
                    {
                      <tr onclick="location.href = '@(Url.Action("", "Home"))'">
                        <td class="nameOfWork">@NameOfWork[i]</td>
                        <td class="textCenter">@Subject[i]</td>
                        <td class="textCenter">@Deadline[i]</td>
                        <td class="textCenter">
                          @{
                            if (@Complete[i])
                            {
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="green" xmlns="http://www.w3.org/2000/svg">
                              <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                              <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"/>
                            </svg>
                            }
                            else
                            {
                              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-circle" fill="red" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                              </svg>
                            }
                          }
                        </td>
                      </tr>
                    }
                  }
                  </tbody>
                </table>
              </div>
            </div>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Klasifikace</h5>
          <p class="card-text">
          <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <br/>
                <table class="table table-hover">
                  <thead class="thead-dark">
                  <tr>
                    <th scope="col">Jméno práce</th>
                    <th scope="col" class="textCenter">Předmět</th>
                    <th scope="col" class="textCenter">Známka</th>
                  </tr>
                  </thead>
                  <tbody>
                  @{
                    for (int i = 0; i < (NameOfWork.Count-1); i++)
                    {
                      <tr onclick="location.href = '@(Url.Action("", "Home", new {Class = 1 }))'">
                        <td class="nameOfWork">@NameOfWork[i]</td>
                        <td class="textCenter">@Subject[i]</td>
                        <th class="textCenter">@Score[i]</th>
                      </tr>
                    }
                  }
                  </tbody>
                </table>
              </div>
            </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>