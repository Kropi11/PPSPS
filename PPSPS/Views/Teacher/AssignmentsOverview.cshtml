@model IEnumerable<PPSPS.Models.PPSPSAssignment>

@{
    ViewData["Title"] = "Přehled prací studentů";
}

    <!-- Obsah stránky -->
<div class="container">
    <div class="row">
        <div class="col-sm-10 offset-sm-1 text-center">
            <form class="form-inline justify-content-center">
                <div class="form-group">
                    <input class="form-control" id="tableSearch" type="text" placeholder="Hledat ... ">
                </div>
            </form>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <br/>
                <table id="TasksOverview" class="table table-hover table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Příjmení</th>
                        <th scope="col">Jméno</th>
                        <th scope="col">Datum odevzdání</th>
                        <th scope="col">Známka</th>
                        <th colspan="3" scope="col" />
                    </tr>
                    </thead>
                    <tbody id="Table">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.User.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.File.DateSubmission)</td>
                            <td class="textCenter">
                                @if (item.Grade != 0)
                                {
                                    @Html.DisplayFor(modelItem => item.Grade)
                                }
                                else
                                {
                                    <text>-</text>
                                }
                            </td>
                            <td class="textCenter" onclick="location.href = '@(Url.Action("AssignmentOverview", "Teacher",new {id = item.Id}))'">
                                <i class="bi bi-file-earmark-person" style="color: #1c7430"/>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div>
        <hr/>
        <a asp-action="TasksOverview">Zpět na přehled</a>
    </div>
</div>