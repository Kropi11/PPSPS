@model PPSPS.Models.PPSPSTask

@{
    ViewData["Title"] = "Vytvořit zadání";
}

<div class="container">
  <form asp-action="TaskCreate" class="needs-validation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset class="form-group">
      <div class="form-group row">
        <label asp-for="TaskName" class="font-weight-bolder col-sm-2 col-form-label">Název práce</label>
        <div class="col-sm-10">
          <input asp-for="TaskName" type="text" maxlength="100" class="form-control" required>
          <span asp-validation-for="TaskName" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group row">
        <label asp-for="Description" class="font-weight-bolder col-sm-2 col-form-label">Zadání</label>
        <div class="col-sm-10">
          <textarea asp-for="Description" maxlength="250" class="form-control" rows="3"></textarea>
          <span asp-validation-for="Description" class="text-danger"></span>
        </div>
      </div>
      <div class="row">
        <label asp-for="ClassId" class="font-weight-bolder col-sm-2 col-form-label">Třída</label>
        <div class="col-auto my-1 form-inline">
          <select asp-for="ClassId" class="custom-select mr-sm-2" required>
            <option disabled selected>Třída</option>
            <option value="A1">A1</option>
            <option value="A2">A2</option>
            <option value="A3">A3</option>
            <option value="A4">A4</option>
            <option value="B1">B1</option>
            <option value="B2">B2</option>
            <option value="B3">B3</option>
            <option value="B4">B4</option>
          </select>
          <span asp-validation-for="ClassId" class="text-danger"></span>
          <select class="custom-select mr-sm-2" required>
            <option value="all" selected>Celá třída</option>
            <option value="1">1. skupina</option>
            <option value="2">2. skupina</option>
            <option value="3">3. skupina</option>
          </select>
        </div>
      </div>
      <div class="row">
        <label class="font-weight-bolder col-sm-2 col-form-label">Odevzdat</label>
        <div class="col-auto my-1 form-inline">
          <label asp-for="DateEntered" class="col-sm-1 col-form-label">Od</label>
          <input asp-for="DateEntered" type="datetime-local" class="custom-select mr-sm-2" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
          <span asp-validation-for="DateEntered" class="text-danger"></span>
          <label asp-for="DateDeadline" class="col-sm-1 col-form-label">Do</label>
          <input asp-for="DateDeadline" type="datetime-local" class="custom-select mr-sm-2" required>
          <span asp-validation-for="DateDeadline" class="text-danger"></span>
        </div>
      </div>
      <div class="row">
        <label asp-for="File" class="font-weight-bolder col-sm-2 col-form-label">Příloha</label>
        <div class="col-auto my-1 form-inline">
          <div class="input-group mb-3">
            <input asp-for="File" type="file" class="btn" multiple>
            <span validation-asp-for="File" class="text-danger"></span>
          </div>
        </div>
      </div>
    </fieldset>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Vytvořit zadání</button>
      </div>
    </div>
  </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}